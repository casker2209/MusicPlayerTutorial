<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingRight="16dp"
    android:paddingLeft="8dp">
    <TextView
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"

        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:gravity="center"
        android:text="1"
        android:textSize="16sp"
        android:id="@+id/song_index"
        ></TextView>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/song_index"
        android:src="@drawable/icon_music_note"
        android:id="@+id/song_icon"></ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/song_icon"
        android:layout_toLeftOf="@+id/song_duration"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:minHeight="32dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:text="Wonderful"
            android:id="@+id/song_title"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="bottom"
            android:text="Casker"
            android:fontFamily="sans-serif-condensed-light"

            android:id="@+id/song_artist"></TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/song_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="12dp"
        android:text="1:00"
        android:textSize="16sp"></TextView>
    </RelativeLayout>